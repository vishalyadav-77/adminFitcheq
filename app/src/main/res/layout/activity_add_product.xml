<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".AddProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Product"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"/>

        <!-- Image URLs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image URLs"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etImageUrls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textMultiLine|textUri"
            android:minLines="5"
            android:maxLines="10"
            android:gravity="top"
            android:layout_marginBottom="12dp" />

        <!-- URL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product URL"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

        <!-- Image URL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image URL"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

        <!-- Tags -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags (comma separated)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <!-- Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- ID -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product ID"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etProductId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Website -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textUri"
            android:layout_marginBottom="20dp"/>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category (ex- tshirt, jeans)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type (ex- polo, fullsleeves)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Color -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Style (comma separated list) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Style [old money] (comma separated)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Occasion (comma separated list) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Occasion [office, college] (comma separated)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etOccasion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Season (optional, comma separated list) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Season [summer, spring] (comma separated)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etSeason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Fit (optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fit [slim fit or oversize] (optional)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etFit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Material (optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material (optional)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>


        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:padding="12dp"/>
    </LinearLayout>


</ScrollView>